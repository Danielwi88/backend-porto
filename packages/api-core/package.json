{
  "name": "api-core",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./src/*": "./src/*",
    "./package.json": "./package.json",
    "./prisma/*": "./prisma/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "prisma generate --schema prisma/schema.prisma && tsc -p tsconfig.json",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^6.4.0",
    "@prisma/client": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "prisma": "^5.22.0",
    "typescript": "^5.6.3"
  }
}
