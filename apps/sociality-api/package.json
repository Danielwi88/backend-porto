{
  "name": "sociality-api",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "api-core": "workspace:*",
    "prisma": "^5.18.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv-cli": "^7.4.1",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && prisma generate --schema ../../packages/api-core/prisma/schema.prisma",
    "start": "node dist/index.js",
    "prisma:push": "prisma db push --schema ../../packages/api-core/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema ../../packages/api-core/prisma/schema.prisma",
    "seed:admin": "tsx src/seed-admin.ts"
  }
}
