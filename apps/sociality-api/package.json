{
  "name": "sociality-api",
  "type": "module",
  "dependencies": {
    "api-core": "workspace:*",
    "tsx": "^4.19.2",
    "prisma": "^5.18.0",
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "dotenv-cli": "^7.4.1"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && prisma generate --schema ../../packages/api-core/prisma/schema.prisma",
    "start": "node dist/index.js",
    "prisma:push": "dotenv -e ../../.env -- prisma db push --schema ../../packages/api-core/prisma/schema.prisma",
    "prisma:studio": "dotenv -e ../../.env -- prisma studio --schema ../../packages/api-core/prisma/schema.prisma",
    "seed:admin": "dotenv -e ../../.env -- tsx src/seed-admin.ts"
  }
}
